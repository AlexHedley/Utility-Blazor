@code {
    string Colour = "#26264C";
    string ColourId = "#";
    
    int Red = 0;
    int Green = 0;
    int Blue = 0;

    // void UpdateColourLabel()
    // {
    //     ColourId = Colour;
    // }

    void ConvertColour()
    {
        ColourId = Colour;
        System.Drawing.Color color = ColorTranslator.FromHtml(Colour);
        Red = Convert.ToInt16(color.R);
        Green = Convert.ToInt16(color.G);
        Blue = Convert.ToInt16(color.B);
    }

}